<%- include("partials/header") %>

<div class="container">
    
    <header class="jumbotron">
        <div class="container">
            <h1>Wellcome to YelpCamp</h1>
        <p>View out hand-picked campgrounds</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new campground</a>
        </p>
        </div>
    </header>
    
    <div class="row" >
        <div class="col-lg-12">
            <h1>Most Popular Campgrounds</h1>
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;"> 
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <image src="<%= campground.image %>"/>
                    <div class="caption">
                         <h4></h1><%= campground.name %></h4>
                    </div>
                </div>
               
                
            </div>
        <% }); %>
    </div>

</div>

<%- include("partials/footer") %>